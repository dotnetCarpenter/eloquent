"use strict";

module.exports = flatten;

// flatten :: [a] -> [a]
function flatten(array) {
	return array.reduce(function (b, c) {
		var bIsArray = Array.isArray(b),
		    cIsArray = Array.isArray(c);

		return !bIsArray && !cIsArray ? [b].concat([c]) : bIsArray && !cIsArray ? b.concat([c]) : !bIsArray && cIsArray ? [b].concat(c) : flatten(b.concat(c));
	});
}
